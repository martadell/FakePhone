<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="edu.upc.eseiaat.pma.fakephone.FakePhoneActivity">

    <Button
        android:id="@+id/btn_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_numbers"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:onClick="clicnum"
        android:text="1"
        android:textSize="30sp" />


    <Button
        android:id="@+id/btn_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_1"
        android:layout_centerHorizontal="true"
        android:onClick="clicnum"
        android:text="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:onClick="clicnum"
        android:text="3"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/btn_1"
        android:layout_alignStart="@+id/btn_1"
        android:layout_below="@+id/btn_1"
        android:layout_marginTop="30dp"
        android:onClick="clicnum"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_4"
        android:layout_alignLeft="@+id/btn_2"
        android:layout_alignStart="@+id/btn_2"
        android:onClick="clicnum"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_4"
        android:layout_alignLeft="@+id/btn_3"
        android:layout_alignStart="@+id/btn_3"
        android:onClick="clicnum"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/btn_4"
        android:layout_alignStart="@+id/btn_4"
        android:layout_below="@+id/btn_4"
        android:layout_marginTop="30dp"
        android:onClick="clicnum"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_7"
        android:layout_alignLeft="@+id/btn_5"
        android:layout_alignStart="@+id/btn_5"
        android:onClick="clicnum"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_8"
        android:layout_alignLeft="@+id/btn_6"
        android:layout_alignStart="@+id/btn_6"
        android:onClick="clicnum"
        android:text="9"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/btn_8"
        android:layout_alignStart="@+id/btn_8"
        android:layout_below="@+id/btn_9"
        android:onClick="clicnum"
        android:layout_marginTop="30dp"
        android:text="0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp" />

    <Button
        android:id="@+id/clicall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_0"
        android:layout_alignEnd="@+id/btn_9"
        android:layout_alignRight="@+id/btn_9"
        android:onClick="clicall"
        android:text="@string/call" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_0"
        android:layout_alignLeft="@+id/btn_7"
        android:layout_alignStart="@+id/btn_7"
        android:onClick="clicdel"
        android:text="Button" />


</RelativeLayout>
